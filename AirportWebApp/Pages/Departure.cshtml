@page
@model AirportWebApp.Pages.DepartureModel
@{
    ViewData["Title"] = "Departure Flight Status";
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        // FlightHub руу холбох
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/flighthub")   // Startup.cs/Program.cs дээр MapHub хийсэн байх ёстой
            .build();

        connection.on("FlightUpdated", function () {
            // Real-time шинэчлэл ирэх үед хүснэгтийг refresh хийх
            location.reload();
            // эсвэл AJAX/Fetch ашиглаад зөвхөн хүснэгт refresh хийж болно
        });

        connection.start().catch(err => console.error(err.toString()));
    </script>
}


<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Нислэгийн код</th>
            <th>Төлөв</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Flights != null && Model.Flights.Any())
        {
            @foreach (var flight in Model.Flights)
            {
                <tr>
                    <td>@flight.FlightCode</td>
                    <td>
                        @if (flight.Status == "Бүртгэж байна")
                        {
                            <span class="badge bg-primary">@flight.Status</span>
                        }
                        else if (flight.Status == "Онгоцонд сууж байна")
                        {
                            <span class="badge bg-success">@flight.Status</span>
                        }
                        else if (flight.Status == "Цуцалсан")
                        {
                            <span class="badge bg-danger">@flight.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@flight.Status</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">Нислэгийн мэдээлэл олдсонгүй</td>
            </tr>
        }
    </tbody>
</table>
    